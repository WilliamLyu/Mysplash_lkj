<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_photo_2_button_bar"
    android:orientation="horizontal"
    android:layout_width="110dp"
    android:layout_height="34dp"
    tools:ignore="DisableBaselineAlignment">

    <com.wangdaye.mysplash.common.ui.widget.CircularProgressIcon
        android:id="@+id/container_photo_2_button_bar_downloadButton"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginEnd="@dimen/mini_margin"
        android:background="?attr/selectableItemBackgroundBorderless"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageButton
        android:id="@+id/container_photo_2_button_bar_collectButton"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:padding="@dimen/little_margin"
        android:layout_marginEnd="@dimen/mini_margin"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_collect_large_light"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <com.wangdaye.mysplash.common.ui.widget.CircularProgressIcon
        android:id="@+id/container_photo_2_button_bar_likeButton"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        tools:ignore="ContentDescription,RtlHardcoded" />

</LinearLayout>