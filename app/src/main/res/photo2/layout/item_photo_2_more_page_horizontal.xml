<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_photo_2_more_page_horizontal"
    android:layout_width="172dp"
    android:layout_height="128dp"
    android:layout_marginTop="@dimen/normal_margin"
    android:layout_marginEnd="@dimen/normal_margin"
    android:layout_marginBottom="@dimen/normal_margin"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@animator/touch_rise_item"
    app:cardBackgroundColor="@color/colorPrimary_dark"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="@dimen/low_elevation"
    tools:ignore="RtlHardcoded,UnusedAttribute">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wangdaye.mysplash.common.ui.widget.freedomSizeView.FreedomImageView
            android:id="@+id/item_photo_2_more_page_horizontal_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:fiv_not_free="true"
            app:fiv_shadow_position="both"
            tools:src="?attr/title_color" />

        <RelativeLayout
            android:id="@+id/item_photo_2_more_page_horizontal_subtitleContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <com.wangdaye.mysplash.common.ui.widget.CircleImageView
                android:id="@+id/item_photo_2_more_page_horizontal_avatar"
                android:layout_width="@dimen/mini_icon_size"
                android:layout_height="@dimen/mini_icon_size"
                android:layout_margin="@dimen/normal_margin"
                android:foreground="?attr/selectableItemBackground"
                android:stateListAnimator="@animator/touch_rise_avatar"
                tools:src="@drawable/default_avatar_round"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <TextView
                android:id="@+id/item_photo_2_more_page_horizontal_subtitle"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:shadowColor="@color/colorTextDark2nd"
                android:alpha="0.9"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/item_photo_2_more_page_horizontal_avatar"
                style="@style/subtitle_text"
                tools:text="WangDaYeeeee"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/item_photo_2_more_page_horizontal_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:maxLines="5"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="@color/colorTextDark2nd"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_above="@id/item_photo_2_more_page_horizontal_subtitleContainer"
            tools:text="LET THE INSPIRATION BEGIN"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>