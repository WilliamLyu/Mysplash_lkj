<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.wangdaye.mysplash.common.ui.widget.fullScreenView.FullScreenTouchView
        android:id="@+id/item_photo_2_base_touch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground" />

    <LinearLayout
        android:id="@+id/item_photo_2_base_titleShadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignBottom="@id/item_photo_2_base_touch">

        <com.wangdaye.mysplash.common.ui.widget.coverView.CoverMaskLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/design_icon_size"
            app:cml_gradient_angle="90"
            app:cml_from_alpha="0.25"
            app:cml_to_alpha="0"
            app:cml_mask_color="@android:color/black" />

        <com.wangdaye.mysplash.common.ui.widget.coordinatorView.NavigationBarView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:alpha="0.25" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_photo_2_base_controlBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignBottom="@id/item_photo_2_base_touch">

        <com.wangdaye.mysplash.common.ui.widget.CircleImageView
            android:id="@+id/item_photo_2_base_avatar"
            android:layout_width="@dimen/little_icon_size"
            android:layout_height="@dimen/little_icon_size"
            android:layout_margin="@dimen/normal_margin"
            android:scaleType="fitCenter"
            android:elevation="@dimen/low_elevation"
            android:stateListAnimator="@animator/touch_rise_item"
            tools:src="@drawable/default_avatar"
            tools:ignore="UnusedAttribute" />

        <RelativeLayout
            android:id="@+id/item_photo_2_base_titleBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.wangdaye.mysplash.photo2.view.widget.PhotoButtonBar
                android:id="@+id/item_photo_2_base_buttonBar"
                android:layout_width="110dp"
                android:layout_height="34dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/normal_margin" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toStartOf="@id/item_photo_2_base_buttonBar"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/normal_margin">

                <TextView
                    android:id="@+id/item_photo_2_base_title"
                    android:textColor="@color/colorTextTitle_dark"
                    android:maxLines="1"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:shadowColor="@color/colorTextDark2nd"
                    android:layout_marginBottom="-2dp"
                    style="@style/subtitle_text"
                    tools:text="Tim Goedhart" />

                <TextView
                    android:id="@+id/item_photo_2_base_subtitle"
                    android:textColor="@color/colorTextTitle_dark"
                    android:maxLines="1"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:shadowColor="@color/colorTextDark2nd"
                    style="@style/subtitle_text"
                    tools:text="Sep 13, 2017" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>