<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/root_color">

    <TextView
        android:id="@+id/item_photo_2_story_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginStart="@dimen/mini_icon_size"
        android:layout_marginEnd="@dimen/mini_icon_size"
        android:layout_width="wrap_content"
        android:lineSpacingMultiplier="1.3"
        style="@style/content_text"
        tools:text="One of the best parts of online communities is the ability to be inspired by others and challenged to try new projects. I saw friends posting photos of frozen bubbles on Instagram. So I decided to try it on activity morning when it was 10 degrees outside. My hands almost froze off, but it was worth it." />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_photo_2_story_content">

        <com.wangdaye.mysplash.common.ui.widget.CircleImageView
            android:id="@+id/item_photo_2_story_avatar"
            android:layout_width="@dimen/little_icon_size"
            android:layout_height="@dimen/little_icon_size"
            android:layout_margin="@dimen/normal_margin"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:foreground="?attr/selectableItemBackground"
            android:stateListAnimator="@animator/touch_rise_avatar"
            android:scaleType="centerCrop"
            android:src="?attr/line_color"
            tools:ignore="ContentDescription,RtlHardcoded,UnusedAttribute" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_toStartOf="@id/item_photo_2_story_avatar"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/item_photo_2_story_title"
                android:layout_marginStart="@dimen/normal_margin"
                android:maxLines="1"
                android:textStyle="bold"
                android:layout_marginBottom="-2dp"
                style="@style/title_text"
                tools:text="Frozen Bubbles"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/item_photo_2_story_subtitle"
                android:layout_marginStart="@dimen/normal_margin"
                android:maxLines="1"
                style="@style/subtitle_text"
                tools:text="Kitsuné Café, Montreal, Canada"
                tools:ignore="RtlHardcoded" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>