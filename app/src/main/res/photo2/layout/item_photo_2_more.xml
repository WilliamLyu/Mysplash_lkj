<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/root_color"
    tools:background="?attr/title_color">

    <view class="com.wangdaye.mysplash.common.ui.widget.SwipeSwitchLayout$ViewPager2"
        android:id="@+id/item_photo_2_more_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="@dimen/item_photo_2_more_vertical_height" />

    <com.wangdaye.mysplash.common.ui.widget.coordinatorView.NavigationBarView
        android:id="@+id/item_photo_2_more_navigationBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_photo_2_more_viewPager" />

    <com.pixelcan.inkpageindicator.InkPageIndicator
        android:id="@+id/item_photo_2_more_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_margin"
        android:layout_above="@id/item_photo_2_more_navigationBar"
        android:layout_centerHorizontal="true"
        app:animationDuration="300"
        app:pageIndicatorColor="@color/colorTextGrey"
        app:currentPageIndicatorColor="@color/colorRoot_light"
        app:dotDiameter="@dimen/little_margin"
        app:dotGap="@dimen/little_margin" />

</RelativeLayout>