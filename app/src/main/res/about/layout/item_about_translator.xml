<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_about_translator_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:background="?attr/root_color"
    tools:ignore="UnusedAttribute">

    <com.wangdaye.mysplash.common.ui.widget.CircleImageView
        android:id="@+id/item_about_translator_avatar"
        android:layout_width="@dimen/normal_icon_size"
        android:layout_height="@dimen/normal_icon_size"
        android:layout_margin="@dimen/normal_margin"
        tools:src="@drawable/default_avatar"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/item_about_translator_centerFlag"
        android:layout_alignParentEnd="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <RelativeLayout
        android:id="@+id/item_about_translator_titleContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/item_about_translator_centerFlag"
        android:layout_toEndOf="@id/item_about_translator_avatar"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/item_about_translator_title"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/nano_margin"
            android:layout_centerVertical="true"
            style="@style/title_text"
            tools:text="Wang Yueeeeee"
            tools:ignore="RtlHardcoded" />

        <ImageView
            android:id="@+id/item_about_translator_flag"
            android:layout_width="@dimen/nano_icon_size"
            android:layout_height="@dimen/nano_icon_size"
            android:layout_marginStart="@dimen/little_margin"
            android:layout_marginBottom="@dimen/nano_margin"
            android:layout_toEndOf="@id/item_about_translator_title"
            android:layout_centerVertical="true"
            tools:src="@drawable/flag_it"
            tools:ignore="ContentDescription,RtlHardcoded" />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_about_translator_subtitle"
        android:layout_below="@id/item_about_translator_titleContainer"
        android:layout_toEndOf="@id/item_about_translator_avatar"
        android:layout_marginStart="@dimen/nano_margin"
        android:layout_marginTop="@dimen/nano_margin"
        android:layout_marginEnd="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        style="@style/subtitle_text"
        tools:text="Wangdayeeeeee@gmail.com"
        tools:ignore="RtlHardcoded" />

</RelativeLayout>