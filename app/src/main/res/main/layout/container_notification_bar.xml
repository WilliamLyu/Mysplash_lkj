<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/container_notification_bar_title"
        android:text="@string/app_name"
        android:textSize="@dimen/large_title_text_size"
        android:textColor="?attr/content_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        tools:ignore="RelativeOverlap" />

    <ImageButton
        android:id="@+id/container_notification_bar_button"
        android:src="@drawable/ic_bell_light"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:padding="3dp"
        android:layout_margin="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        tools:ignore="ContentDescription,RtlHardcoded" />

    <ImageView
        android:id="@+id/container_notification_bar_unreadFlag"
        android:src="@drawable/ic_unread"
        android:layout_width="30dp"
        android:layout_height="38dp"
        android:paddingTop="22dp"
        android:layout_alignStart="@id/container_notification_bar_button"
        android:layout_alignTop="@id/container_notification_bar_button"
        android:scaleType="centerInside"
        tools:ignore="ContentDescription,RtlHardcoded" />

</RelativeLayout>