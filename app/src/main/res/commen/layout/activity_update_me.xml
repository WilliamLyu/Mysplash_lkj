<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_update_me_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wangdaye.mysplash.common.ui.widget.coordinatorView.StatusBarView
            android:id="@+id/activity_update_me_statusBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.wangdaye.mysplash.common.ui.widget.SwipeBackCoordinatorLayout
            android:id="@+id/activity_update_me_swipeBackView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/root_color">

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/activity_update_me_scrollView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <include layout="@layout/container_update_me" />

            </android.support.v4.widget.NestedScrollView>

        </com.wangdaye.mysplash.common.ui.widget.SwipeBackCoordinatorLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>