<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_download_type_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/root_color">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/dialog_download_type_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/dialog_download_type_downloadIcon"
                android:src="@drawable/ic_download_light"
                style="@style/material_icon"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/dialog_download_type_downloadTxt"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/dialog_download_type_downloadIcon"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                style="@style/content_text"
                tools:text="DOWNLOAD"
                tools:ignore="HardcodedText,RtlHardcoded" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_download_type_share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/dialog_download_type_shareIcon"
                android:src="@drawable/ic_send_light"
                style="@style/material_icon"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/dialog_download_type_shareTxt"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/dialog_download_type_shareIcon"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                style="@style/content_text"
                tools:text="SHARE"
                tools:ignore="HardcodedText,RtlHardcoded" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/dialog_download_type_wallpaper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/dialog_download_type_wallpaperIcon"
                android:src="@drawable/ic_mountain_light"
                style="@style/material_icon"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/dialog_download_type_wallpaperTxt"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/dialog_download_type_wallpaperIcon"
                android:layout_width="wrap_content"
                android:textStyle="bold"
                style="@style/content_text"
                tools:text="WALLPAPER"
                tools:ignore="HardcodedText,RtlHardcoded" />

        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>