<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorRoot_light">

    <RelativeLayout
        android:id="@+id/popup_wallpaper_clip_square"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/popup_wallpaper_clip_squareIcon"
            android:src="@drawable/ic_orientation_squarish_light"
            style="@style/material_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/popup_wallpaper_clip_squareTxt"
            android:text="@string/action_clip_with_square"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/popup_wallpaper_clip_squareIcon"
            android:layout_width="wrap_content"
            android:textColor="@color/colorTextContent_light"
            style="@style/content_text"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/popup_wallpaper_clip_rect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/popup_wallpaper_clip_rectIcon"
            android:src="@drawable/ic_orientation_portrait_light"
            style="@style/material_icon"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/popup_wallpaper_clip_rectTxt"
            android:text="@string/action_clip_with_rectangle"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/popup_wallpaper_clip_rectIcon"
            android:layout_width="wrap_content"
            android:textColor="@color/colorTextContent_light"
            style="@style/content_text"
            tools:ignore="HardcodedText,RtlHardcoded" />

    </RelativeLayout>

</LinearLayout>