<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/container_update_me_closeBtn"
            android:src="@drawable/ic_close_light"
            style="@style/material_image_button"
            tools:ignore="ContentDescription" />

        <TextView
            android:text="@string/action_edit"
            android:textStyle="bold"
            android:textSize="@dimen/large_title_text_size"
            android:textColor="?attr/content_color"
            android:layout_toEndOf="@id/container_update_me_closeBtn"
            android:layout_margin="@dimen/normal_margin"
            android:layout_centerInParent="true"
            style="@style/title_text"
            tools:ignore="RtlHardcoded" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:id="@+id/container_update_me_progressView"
            android:layout_width="@dimen/circular_progress_height"
            android:layout_height="@dimen/circular_progress_height"
            android:layout_margin="@dimen/little_icon_size"
            android:layout_centerInParent="true"
            app:cpv_color="?attr/title_color"
            app:cpv_indeterminate="true"
            app:cpv_animAutostart="true" />

        <LinearLayout
            android:id="@+id/container_update_me_textContainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/container_update_me_usernameTxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/little_icon_size"
                android:inputType="textFilter"
                android:hint="@string/feedback_edit_username"
                android:textColorHint="?attr/subtitle_color"
                android:textColorHighlight="?attr/subtitle_color"
                android:textSize="@dimen/content_text_size"
                android:textColor="?attr/content_color"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_marginTop="@dimen/normal_margin" />

            <EditText
                android:id="@+id/container_update_me_firstNameTxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/little_icon_size"
                android:inputType="none"
                android:hint="@string/feedback_edit_first_name"
                android:textColorHint="?attr/subtitle_color"
                android:textColorHighlight="?attr/subtitle_color"
                android:textSize="@dimen/content_text_size"
                android:textColor="?attr/content_color"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_marginTop="@dimen/normal_margin" />

            <EditText
                android:id="@+id/container_update_me_lastNameTxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/little_icon_size"
                android:inputType="none"
                android:hint="@string/feedback_edit_last_name"
                android:textColorHint="?attr/subtitle_color"
                android:textColorHighlight="?attr/subtitle_color"
                android:textSize="@dimen/content_text_size"
                android:textColor="?attr/content_color"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_marginTop="@dimen/normal_margin" />

            <EditText
                android:id="@+id/container_update_me_emailTxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/little_icon_size"
                android:inputType="textEmailAddress"
                android:hint="@string/feedback_edit_email"
                android:textColorHint="?attr/subtitle_color"
                android:textColorHighlight="?attr/subtitle_color"
                android:textSize="@dimen/content_text_size"
                android:textColor="?attr/content_color"
                android:maxLines="1"
                android:background="@android:color/transparent"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_marginTop="@dimen/normal_margin" />

            <EditText
                android:id="@+id/container_update_me_portfolioTxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/little_icon_size"
                android:inputType="textUri"
                android:hint="@string/feedback_edit_portfolio"
                android:textColorHint="?attr/subtitle_color"
                android:textColorHighlight="?attr/subtitle_color"
                android:textSize="@dimen/content_text_size"
                android:textColor="?attr/content_color"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_marginTop="@dimen/normal_margin" />

            <EditText
                android:id="@+id/container_update_me_locationTxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/little_icon_size"
                android:inputType="text"
                android:hint="@string/feedback_edit_location"
                android:textColorHint="?attr/subtitle_color"
                android:textColorHighlight="?attr/subtitle_color"
                android:textSize="@dimen/content_text_size"
                android:textColor="?attr/content_color"
                android:background="@android:color/transparent"
                android:maxLines="1"
                android:maxLength="30"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_marginTop="@dimen/normal_margin" />

            <EditText
                android:id="@+id/container_update_me_bioTxt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/design_icon_size"
                android:inputType="textMultiLine"
                android:hint="@string/feedback_edit_bio"
                android:textColorHint="?attr/subtitle_color"
                android:textColorHighlight="?attr/subtitle_color"
                android:textSize="@dimen/content_text_size"
                android:textColor="?attr/content_color"
                android:background="@android:color/transparent"
                android:maxLength="250"
                android:layout_marginStart="@dimen/normal_margin"
                android:layout_marginEnd="@dimen/normal_margin"
                android:layout_marginTop="@dimen/normal_margin" />

            <Button
                android:id="@+id/container_update_me_saveBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:textStyle="bold"
                android:textColor="?attr/root_color"
                android:layout_margin="@dimen/normal_margin"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>