<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container_ripple_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/container_ripple_button_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        tools:text="FOLLOW" />

    <com.wangdaye.mysplash.common.ui.widget.rippleButton.RippleView
        android:id="@+id/container_ripple_button_ripple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.github.rahatarmanahmed.cpv.CircularProgressView
        android:id="@+id/container_ripple_button_progress"
        android:layout_width="@dimen/mini_icon_size"
        android:layout_height="@dimen/mini_icon_size"
        android:layout_centerInParent="true"
        app:cpv_animAutostart="true"
        app:cpv_color="?attr/title_color"
        app:cpv_indeterminate="true" />

</RelativeLayout>