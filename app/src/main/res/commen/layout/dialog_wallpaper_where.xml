<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog_wallpaper_where_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorRoot_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.rahatarmanahmed.cpv.CircularProgressView
            android:id="@+id/dialog_wallpaper_where_progress"
            android:layout_width="@dimen/circular_progress_height"
            android:layout_height="@dimen/circular_progress_height"
            android:layout_margin="@dimen/normal_margin"
            android:layout_centerInParent="true"
            app:cpv_animAutostart="true"
            app:cpv_color="@color/colorTextTitle_light"
            app:cpv_indeterminate="true"/>

        <LinearLayout
            android:id="@+id/dialog_wallpaper_where_selector"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/dialog_wallpaper_where_wallpaper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/dialog_wallpaper_where_wallpaperTxt"
                    android:text="@string/action_wallpaper"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:textColor="@color/colorTextTitle_light"
                    android:textStyle="bold"
                    style="@style/title_text"
                    tools:ignore="HardcodedText,RtlHardcoded" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dialog_wallpaper_where_lockscreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/dialog_wallpaper_where_lockscreenTxt"
                    android:text="@string/action_lockscreen"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:textColor="@color/colorTextTitle_light"
                    android:textStyle="bold"
                    style="@style/title_text"
                    tools:ignore="HardcodedText,RtlHardcoded" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dialog_wallpaper_where_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground">

                <TextView
                    android:id="@+id/dialog_wallpaper_where_allTxt"
                    android:text="@string/action_wallpaper_lockscreen"
                    android:layout_marginEnd="@dimen/normal_margin"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_margin="@dimen/normal_margin"
                    android:textColor="@color/colorTextTitle_light"
                    android:textStyle="bold"
                    style="@style/title_text"
                    tools:ignore="HardcodedText,RtlHardcoded" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>